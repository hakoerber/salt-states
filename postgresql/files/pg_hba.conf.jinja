# TYPE  DATABASE        USER            ADDRESS                 METHOD
# the unix domain socket is 0770 anyway
local all all trust
# IPv4 local connections:
host    all             all             127.0.0.1/32            ident
# IPv6 local connections:
host    all             all             ::1/128                 ident
{% for range in auth.ip_ranges %}
host {{ range.database }} {{ range.user }} {{ range.address }} {{ range.method }}
{% endfor %}

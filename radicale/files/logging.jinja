{% from 'states/radicale/map.jinja' import radicale as radicale_map with context %}

[loggers]
keys = root

[handlers]
keys = file

[formatters]
keys = full

[logger_root]
# Root logger
level = DEBUG
handlers = file

[handler_file]
# File handler
class = FileHandler
args = ('{{ radicale_map.logging.file }}',)
level = INFO
formatter = full

[formatter_full]
# Full output format
format = %(asctime)s - %(levelname)s: %(message)s
